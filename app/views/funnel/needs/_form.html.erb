<%# frozen_string_literal: true %>

<h1> <%= t('needs.form.title') %></h1>

<%= simple_form_for(simulation) do |f| %>
  <%= f.hidden_field :contact_id, value: simulation.contact.id %>
  <%= f.input :annual_revenue %>
  <%= f.input :company_legal_name %>
  <%= f.input :natural_person %>
  <%= f.association :nacebel_codes, as: :select, collection: NacebelCode.all.map { |code| ["#{code.identifier} - #{code.description}", code.id]},
                                           input_html: { class: 'select2', multiple: true },
                                           include_hidden: false %>
  <%= f.input :enterprise_number %>
  <%= f.input :coverage_ceiling_formula, as: :select, collection: ['small', 'large'] %>
  <%= f.input :deductible_formula, as: :select, collection: ['small', 'medium', 'large'] %>
  <%= f.submit %>
<% end %>
